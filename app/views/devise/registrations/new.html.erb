<div class="container-sign-in">
  <div class="form">
    <h2>Sign up</h2>
  
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
  
      <div class="field">
        <%= f.label :email, class: "text" %><br />
        <%= f.email_field :email, autofocus: true, class: "text-field" %>
      </div>
  
      <div class="field">
        <%= f.label :password, class: "text" %>
        <% if @minimum_password_length %>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class: "text-field" %>
      </div>
  
      <div class="field">
        <%= f.label :password_confirmation, class: "text" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "text-field" %>
      </div>
  
      <div class="actions">
        <%= f.submit "Sign up", class: "button" %>
      </div>
    <% end %>
  
    <%= render "devise/shared/links" %>
  </div>
</div>
