<div class="container-sign-in">
  <div class="form">
    <h2>Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, class: "text" %><br />
        <%= f.email_field :email, autofocus: true, class: "text-field" %>
      </div>

      <div class="field">
        <%= f.label :password, class: "text" %><br />
        <%= f.password_field :password, autocomplete: "off", class: "text-field" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "Log in", class: "button" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
